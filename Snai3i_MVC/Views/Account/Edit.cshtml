@using Snai3i_BLL.DTO.AcountDto


@model ApplicationUserEditDto
@{
    Layout = "RegisteredLayout";
}


@{
    ViewBag.Title = "Edit "; 
}

<form asp-action="Edit" asp-controller="Accounts" asp-route-user_Id="@Model.userId" method="post" enctype="multipart/form-data">
    
    @Html.AntiForgeryToken()

    <h4> Edit your Data</h4>

    <input type="hidden" asp-for="userId" />



    @* to make sure the userid of appuser is submitted when sending the form  *@

    <div class=" form-row">
        <label class="col-sm-2 col-form-label" asp-for="FirstName" ></label>
        <div class="col-sm-10" >
            <input class=" form-control" asp-for="FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

    </div>


    <div class=" form-row">
        <label class="col-sm-2 col-form-label" asp-for="LastName" ></label>
        <div class="col-sm-10">
            <input class=" form-control" asp-for="LastName" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

    </div>

    <div class=" form-row">
        <label class="col-sm-2 col-form-label" asp-for="imageFile"></label>
        <div class="col-sm-10">
            <input type="file" class=" form-control" asp-for="imageFile" />
            <span asp-validation-for="imageFile" class="text-danger" ></span>
        </div>

    </div>


    <div class=" form-row">
        <label class="col-sm-2 col-form-label" asp-for="Email"></label>
        <div class="col-sm-10">
            <input  class=" form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

    </div>


    <div class=" form-row">
        <label class="col-sm-2 col-form-label" asp-for="phone"></label>
        <div class="col-sm-10">
            <input  class=" form-control" asp-for="phone" />
            <span asp-validation-for="phone" class="text-danger" ></span>
        </div>

    </div>


    <div class=" form-row">
        <div class="col-sm-2">
        <input type="submit" class="btn btn-group-lg p-1 btn-primary" ></input>
        </div>
    </div>



</form>


@section ValidScripts {
    <partial name="_validationScriptsPartial" />
}