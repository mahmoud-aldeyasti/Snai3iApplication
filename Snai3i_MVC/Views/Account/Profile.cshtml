@using Snai3i_BLL.DTO.AcountDto

@model ApplicationUserReadDto


@{
    Layout = "RegisteredLayout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body text-center">
                    <!-- Profile Picture -->
                    @* <img src="D:\courses\رواد مصر الرقمية\dotnetweb\content\project\Mahmoud_Last\Snai3iApplication\Snai3i_API/img/uploads/user/@Model.image" class="rounded-circle" alt="Profile Picture" width="150" height="150" /> *@
                    <img src="https://localhost:7000/Uploads/@Model.image" class="rounded-circle" alt="Profile Picture" width="150" height="150" />

                    <!-- User Info -->
                    <h3 class="mt-3">@Model.FirstName @Model.LastName</h3>
                    <p class="text-muted">@Model.Email</p>

                    <!-- User Details -->
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <h5 class="text-primary">Phone Number</h5>
                            <p>@Model.phone</p>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-primary">Governorate</h5>
                            <p>@Model.Governorate ?? "Not specified"</p>
                        </div>
                    </div>

                    <!-- Location Details -->
                    @if(Model.Longitude.HasValue && Model.Latitude.HasValue)
                    {
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <h5 class="text-primary">Longitude</h5>
                                <p>@Model.Longitude</p>
                            </div>
                            <div class="col-md-6">
                                <h5 class="text-primary">Latitude</h5>
                                <p>@Model.Latitude</p>
                            </div>
                        </div>
                    }

                    <!-- Buttons to Edit Profile or Change Password -->
                    <div class="mt-4">
                        <a asp-controller="Accounts"  asp-action="Edit" asp-route-user_Id="@Model.Id" class="btn btn-primary">Edit Profile</a>
                        <a asp-controller="Accounts" asp-action="ChangePassword"
                        asp-route-ID="@Model.Id" class="btn btn-secondary">Change Password</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
