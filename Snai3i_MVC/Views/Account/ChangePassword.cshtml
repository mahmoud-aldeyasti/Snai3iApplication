@using Snai3i_BLL.DTO.AcountDto
@model ChangePasswordDto

@{
    Layout = "RegisteredLayout";
}


@{
    ViewBag.Title = "Change Your Password";
}

<h2 class="mb-4 text-center">@ViewBag.Title</h2>
@Html.AntiForgeryToken()

<form method="post" asp-controller="Accounts" asp-action="ChangePassword" class="p-3">
    
    <input asp-for="Id" hidden />
    <!-- Old Password -->
    <div class="form-group row mb-3">
        <label asp-for="OldPassword" class="col-sm-3 col-form-label">Old Password</label>
        <div class="col-sm-6">
            <input asp-for="OldPassword" class="form-control" placeholder="Enter current password" />
            <span class="text-danger" asp-validation-for="OldPassword"></span>
        </div>
    </div>

    <!-- New Password -->
    <div class="form-group row mb-3">
        <label asp-for="NewPassword" class="col-sm-3 col-form-label">New Password</label>
        <div class="col-sm-6">
            <input asp-for="NewPassword" class="form-control" placeholder="Enter new password" />
            <span class="text-danger" asp-validation-for="NewPassword"></span>
        </div>
    </div>

    <!-- Confirm New Password -->
    <div class="form-group row mb-4">
        <label asp-for="ConfirmNewPassword" class="col-sm-3 col-form-label">Confirm Password</label>
        <div class="col-sm-6">
            <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Confirm new password" />
            <span class="text-danger" asp-validation-for="ConfirmNewPassword"></span>
        </div>
    </div>

    <!-- Submit Button -->
    <div class="form-group text-center">
        <input type="submit" class="btn btn-primary px-4" value="Change Password" />
    </div>
</form>


@section ValidScripts {
    <partial name="_validationScriptsPartial" />
}